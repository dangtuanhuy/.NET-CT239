@model IEnumerable<MyWatchWatch.Models.Delivery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdminLayout.cshtml";
}

<section class="dashboard-header section-padding">
    <div class="container">
        <h2 class="text-center">Branches 0f Watch</h2>

        <p>
            <a href="@Url.Action("Create", "Branches")" class="btn btn-info">
                Create
            </a>
        </p>
        @Html.Raw(TempData["msg1"])
        <table class="table table-striped table-bordered table-responsive" id="tablefillset">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImgDelivery)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryDetails)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryQuestion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.EmployeePass)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImgDelivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryDetails)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryQuestion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.EmployeePass)
                        </td>
                        <td class="col-4 text-center">
                            <a href="@Url.Action("Edit", "Deliveries", new { id = item.DeliveryId })" class="btn btn-default">
                                <i class="fa fa-plus-square"></i>
                                <span>

                                </span>
                            </a>
                            |
                            <a href="@Url.Action("Delete", "Deliveries", new { id = item.DeliveryId})" class="btn btn-default">
                                <i class="fa fa-trash"></i>
                                <span>

                                </span>
                            </a>
                            |
                            <a href="@Url.Action("UploadDelivery", "Deliveries", new { id = item.DeliveryId})" class="btn btn-default">
                                <i class="fa fa-file-picture-o"></i>
                                <span>

                                </span>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>